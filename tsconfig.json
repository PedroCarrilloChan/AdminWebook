
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": ["ES2022", "DOM"],
    "types": ["@cloudflare/workers-types"]
  },
  "include": [
    "functions/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}
